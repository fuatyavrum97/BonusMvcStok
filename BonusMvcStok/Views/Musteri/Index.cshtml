@using BonusMvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc 
@model PagedList.IPagedList<tblmusteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD</th>
      
        <th>ŞEHİR</th>
        <th>BAKİYE</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            @*SOYADINI DATABASEDEN ÇEKEMİYORUM*@
            <td>@x.sehir</td>
            <td>@x.bakiye</td>
            <td><a href="/Musteri/MusteriSil/@x.id" class="btn btn-danger">Sil</a></td>
            @*Üstte neye göre sildiğimizi yazdık...*@
            <td><a href="/Musteri/MusteriGetir/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa }))
@*Üstteki satır mesela bir sayfada 3 ürün gösterecen ama 5 tane var.bu kodla 2 sayfa şeklinde gösteriyo 2ye basıyorsun kalan değerleri gösteriyor*@

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri</a>

